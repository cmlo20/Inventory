<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="item"
                  type="com.hku.lesinventory.model.Item"/>
        <variable name="brand"
                  type="com.hku.lesinventory.model.Brand"/>
        <variable name="callback"
                  type="com.hku.lesinventory.ui.ItemClickCallback"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:onClick="@{() -> callback.onClick(item)}"
        android:layout_marginStart="@dimen/list_item_horizontal_margin"
        android:layout_marginEnd="@dimen/list_item_horizontal_margin"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardCornerRadius="@dimen/cardview_default_radius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="@dimen/list_item_image_width"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/cd_item_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/list_item_text_margin"
                android:layout_marginTop="@dimen/list_item_text_margin"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:text="@{brand.name}"
                app:layout_constraintStart_toEndOf="@+id/item_image"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Brand" />

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/list_item_text_margin"
                android:layout_marginTop="@dimen/list_item_text_margin"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:text="@{item.name}"
                app:layout_constraintStart_toEndOf="@+id/item_brand"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Item name" />

            <TextView
                android:id="@+id/item_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/list_item_text_margin"
                android:layout_marginTop="@dimen/list_item_text_margin"
                android:text="@{item.description}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/item_image"
                app:layout_constraintTop_toBottomOf="@+id/item_brand"
                tools:text="Description" />

            <TextView
                android:id="@+id/item_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/list_item_text_margin"
                android:layout_marginTop="@dimen/list_item_text_margin"
                android:text="@{@string/header_quantity(item.quantity)}"
                app:layout_constraintStart_toEndOf="@+id/item_image"
                app:layout_constraintTop_toBottomOf="@+id/item_description"
                tools:text="Quantity: 4" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
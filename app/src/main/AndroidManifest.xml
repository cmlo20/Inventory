<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hku.lesinventory">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <queries>
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
    </queries>

    <application
        android:name=".InventoryApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.ItemActivity">
        </activity>
        <activity android:name=".ui.NewInstanceActivity"
            android:label="@string/title_new_instance"/>
        <activity
            android:name=".ui.NewItemActivity"
            android:label="@string/title_new_item"
            android:parentActivityName=".ui.InventoryActivity" />
        <activity
            android:name=".AddCategoryActivity"
            android:parentActivityName=".ui.InventoryActivity" />
        <activity
            android:name=".CaptureActivityPortrait"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".AddInstanceActivity"
            android:label="@string/add_instance_title"
            android:parentActivityName=".ui.InventoryActivity" />
        <activity android:name=".EditItemActivity" />
        <activity
            android:name=".ItemDetailActivity"
            android:parentActivityName=".ui.InventoryActivity" />
        <activity
            android:name=".AddItemTypeActivity"
            android:label="@string/add_item_type_title"
            android:parentActivityName=".ui.InventoryActivity" />
        <activity android:name=".ui.InventoryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.hku.lesinventory"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>